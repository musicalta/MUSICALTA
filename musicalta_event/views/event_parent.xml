<odoo>
    <data>
        <!-- Tree View -->
        <record id="event_parent_tree_view" model="ir.ui.view">
            <field name="name">event.parent.tree.view</field>
            <field name="model">event.parent</field>
            <field name="arch" type="xml">
                <tree string="Parent d'Évènement">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="event_parent_form_view" model="ir.ui.view">
            <field name="name">event.parent.form.view</field>
            <field name="model">event.parent</field>
            <field name="arch" type="xml">
                <form string="Parent d'Évènement">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="event_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open the correct view -->
        <record id="action_event_parent" model="ir.actions.act_window">
            <field name="name">Parent d'Évènement</field>
            <field name="res_model">event.parent</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier parent d'évènement
                </p>
            </field>
        </record>

        <!-- Add the action to the menu -->
        <menuitem id="menu_event_parent"
                  name="Parent d'Évènement"
                  action="action_event_parent"
                  parent="event.event_main_menu"
                  sequence="20"/>
    </data>
</odoo>
