<odoo>
    <data>
        <record id="event_event_view_form_inherit" model="ir.ui.view">
            <field name="name">Event event view form inherit</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='tickets']" position="after">
                    <page name="event_teachers" string="Teachers">
                        <label for="teacher_ids" string="Teachers"/>
                        <field name="teacher_ids" widget="many2many"/>
                    </page>
                </xpath>

                <xpath expr="//label[@for='seats_limited']" position="replace">
                    <field name="limit_registration_by_teacher" invisible="1"/>
                    <label for="seats_limited" string="Limit Registrations" attrs="{'invisible': [('limit_registration_by_teacher', '=', True)]}"/>

                </xpath>
                <xpath expr="//label[@for='seats_limited']/following-sibling::div" position="replace">
                    <div attrs="{'invisible': [('limit_registration_by_teacher', '=', True)]}">
                        <field name="seats_limited"/>
                        <span attrs="{'invisible': ['|', ('seats_limited', '=', False), ('limit_registration_by_teacher', '=', True)], 'required': [('seats_limited', '=', False)]}">to <field name="seats_max" class="oe_inline o_input_9ch"/> Confirmed Attendees</span>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
