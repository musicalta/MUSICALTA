<odoo>
    <record id="view_event_inscription_wizard" model="ir.ui.view">
        <field name="name">wizard.event.inscription.form</field>
        <field name="model">wizard.event.inscription</field>
        <field name="arch" type="xml">
            <form string="Event Registration">
                <sheet>
                    <group>
                        <field name="session_id"/>
                    </group>
                    <notebook>
                        <page name="information" string="Informations">
                            <group>
                                <group string="Pack/Discipline">
                                    <field name="product_pack_id"/>
                                    <field name="is_auditor"/>
                                    <field name="discipline_id_1" />
                                    <field name="teacher_id_1" attrs="{'invisible': [('discipline_id_1', '=', False)]}" />
                                    <field name="discipline_id_2" attrs="{'invisible': [('discipline_id_1', '=', False)]}" />
                                    <field name="teacher_id_2" attrs="{'invisible': [('discipline_id_2', '=', False)]}" />
                                </group>
                                <field name="options_ids">
                                    <tree create="1" editable="bottom">
                                        <field name="discipline_id"/>
                                        <field name="teacher_id"/>
                                    </tree>
                                </field>
                                <group string="HÃ©bergement">
                                    <field name="product_hebergement_id" />
                                    <field name="product_launch_id" attrs="{'invisible': [('product_hebergement_id', '!=', False)]}" />
                                </group>
                                <group string="Salle de travail">
                                    <field name="product_work_rooms_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="process_registration" string="Sauvegarder" type="object" class="btn-primary"/>
                        <button name="cancel" string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
